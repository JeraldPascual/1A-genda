rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Global tasks - only admin can write
    match /globalTasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Student progress - students can only modify their own
    match /studentProgress/{progressId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth.uid == resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId || isAdmin();
    }

    // Announcements - only admin can write
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Class settings - only admin can write
    match /classSettings/{doc} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Task requests (cross-batch access) - students can create their own, admins can manage
    match /taskRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Task creation requests - students can create/read, admins can manage
    match /taskCreationRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || (request.auth.uid == resource.data.userId && resource.data.status == 'pending');
      allow delete: if isAdmin();
    }

    // NEW: Task revision requests - students can create/read, admins can manage
    match /taskRevisionRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // NEW: Announcement revision requests - students can create/read, admins can manage
    match /announcementRevisionRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // NEW: Content submission requests - students can create/read, admins can manage
    match /contentSubmissionRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
