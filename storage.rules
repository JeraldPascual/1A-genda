rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to announcements, tasks, and resources folders
    match /announcements/{fileName} {
      allow read: if true; // Anyone can read/download
      allow write: if request.auth != null; // Only authenticated users can upload
    }

    match /tasks/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /resources/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
